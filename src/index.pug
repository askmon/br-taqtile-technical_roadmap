    link(href="https://fonts.googleapis.com/css?family=Delius" rel="stylesheet")

    style.
      .node circle {
        cursor: pointer;
        fill: #fff;
        stroke: steelblue;
        stroke-width: 1.5px;
      }

      .node text {
        font-size: 14px;
        font-family: 'Delius', cursive;
      }

      .node rect {
        stroke: #294554;
        stroke-width: 1.5px;
      }

      path.link {
        fill: none;
        stroke: #0c7cba;
        stroke-width: 3px;
        marker-end: url(#end);
      }

      .flag {
        fill: steelblue;
        stroke: #636363;
        stroke-width: 1.5px;
      }

  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      a.navbar-brand(href="#")
        img(src="assets/logo.png" height="36px")
      button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href="index.pug/?tree=0")
              | Basic
          li.nav-item
            a.nav-link(href="index.pug/?tree=1")
              | Web
          li.nav-item
            a.nav-link(href="index.pug/?tree=2")
              | Server
          li.nav-item
            a.nav-link(href="index.pug/?tree=3")
              | DevOps

    include ./modal.pug

    svg(style="position:absolute;width:0;height:0;top:-200px;")
