div(class="modal fade" id="node-modal" tabindex="-1" role ="dialog" aria-labelledby="node-modal")
  .modal-dialog(role="document")
    .modal-content(style='background-color: #343a40; border: none; padding: 8px;')
      .modal-header(style='border-bottom: 1px solid white;')
        h5(class="modal-title" id="node-modal-label" style='color: white;') Modal title
        button(type="button" class="close" data-dismiss="modal" aria-label="Close")
          span(aria-hidden="true" style='color: white;') &times;
      .modal-body
